  "exampleExecution": {
    "task": "Write a 1500-word blog post about AI in B2B marketing",
    "agent": "marcus-hayes",
    "steps": [
      {
        "step": 1,
        "action": "Receive task from Scotty with requirements",
        "input": {
          "task": "blog_post",
          "topic": "AI in B2B marketing",
          "wordCount": 1500,
          "tone": "professional",
          "includeKeywords": ["AI marketing", "B2B automation", "marketing AI tools"],
          "targetAudience": "B2B marketing directors"
        }
      },
      {
        "step": 2,
        "action": "Construct OpenAI API request",
        "systemPrompt": "Marcus Hayes world-class expert prompt",
        "userPrompt": "Write a 1500-word blog post about AI in B2B marketing...",
        "temperature": 0.7,
        "maxTokens": 3000
      },
      {
        "step": 3,
        "action": "Receive and parse OpenAI response",
        "output": "Complete 1500-word blog post in markdown"
      },
      {
        "step": 4,
        "action": "Quality check output",
        "checks": ["word count", "keyword inclusion", "readability", "structure"]
      },
      {
        "step": 5,
        "action": "Deliver output to user",
        "format": "markdown",
        "location": "project deliverables",
        "notification": "Slack + email"
      },
      {
        "step": 6,
        "action": "Update project metrics",
        "metrics": {
          "tasksCompleted": 143,
          "aiCost": "$0.12",
          "timeToComplete": "45 seconds"
        }
