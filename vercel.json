{
  "version": 2,
  "builds": [
    {
      "src": "**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/dashboard",
      "dest": "/scotty/index.html"
    },
    {
      "src": "/",
      "dest": "/index.html"
    },
    {
      "src": "/scotty/(.*)",
      "dest": "/scotty/$1"
    },
    {
      "src": "/ui/(.*)",
      "dest": "/ui/$1"
    },
    {
      "src": "/departments/(.*)",
      "dest": "/departments/$1"
    },
    {
      "src": "/workflows/(.*)",
      "dest": "/workflows/$1"
    },
    {
      "src": "/agents/(.*)",
      "dest": "/agents/$1"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    },
    {
      "source": "/scotty/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600"
        }
      ]
    }
  ]
}
